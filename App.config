<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- CDN Configuration -->
    <add key="CdnBaseUrl" value="https://cdn.yourdomain.com/images" />
    <add key="UseCdn" value="false" />
    <add key="CdnAccessKey" value="" />
    <add key="CdnSecretKey" value="" />
    
    <!-- Local Storage Configuration -->
    <add key="LocalImagePath" value="~/Images/" />
    <add key="PhotoDirectory" value="PHOTO/PRODUCTSERVICE" />
    <add key="EnableFileSystemStorage" value="true" />
    
    <!-- Cache Configuration -->
    <add key="MemoryCacheSize" value="100" />
    <add key="CacheExpirationMinutes" value="60" />
    <add key="EnableMemoryCache" value="true" />
    
    <!-- Image Processing Configuration -->
    <add key="DefaultImageQuality" value="80" />
    <add key="MaxImageWidth" value="4096" />
    <add key="MaxImageHeight" value="4096" />
    <add key="MaxFileSize" value="10485760" />
    <add key="EnableProgressiveJpeg" value="true" />
    
    <!-- Security Configuration -->
    <add key="EnableImageValidation" value="true" />
    <add key="EnableMetadataSanitization" value="true" />
    <add key="EnableContentScanning" value="false" />
    <add key="AllowedImageFormats" value="jpg,jpeg,png,gif,bmp,webp" />
    
    <!-- Cleanup Configuration -->
    <add key="EnableAutoCleanup" value="true" />
    <add key="CleanupIntervalDays" value="7" />
    <add key="OrphanedFileRetentionDays" value="30" />
    <add key="EnableDuplicateDetection" value="true" />
    
    <!-- Performance Configuration -->
    <add key="EnableLazyLoading" value="true" />
    <add key="EnableAsyncProcessing" value="true" />
    <add key="MaxConcurrentOperations" value="10" />
    <add key="EnableCompression" value="true" />
    
    <!-- Logging Configuration -->
    <add key="EnableImageLogging" value="false" />
    <add key="ImageLogLevel" value="Info" />
    <add key="LogPerformanceMetrics" value="false" />
  </appSettings>
  
  <connectionStrings>
    <!-- Existing connection strings -->
  </connectionStrings>
</configuration>
